<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :title %>
  <%= f.input :year %>
  <%= f.input :plot_summary, as: :text, input_html: { rows: 4 } %>
  <%= f.input :gross_takings %>
  <%= f.input :available_on_dvd %>

  <%= f.button :submit_cancel, cancel: movies_path %>
<% end %>
